﻿@model IEnumerable<DataAccessLayer.EmpOrm>
@{
    ViewBag.Title = "Home Page";
}

<h1>Employee List</h1>

<p>
    @Html.ActionLink("Create New Employee", "Create", null, new { @class = "btn btn-primary mb-3" })
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Employee Id</th>
            <th>Employee Name</th>
            <th>Department Id</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EmpId</td>
                <td>@item.EmpName</td>
                <td>@item.DeptId</td>
                <td class="text-center">

                    @Html.ActionLink("Edit", "Edit", new { id = item.EmpId }, new { @class = "btn btn-warning btn-sm" })

                    <!-- Delete Employee -->
                    @using (Html.BeginForm("Delete", "Home", new { id = item.EmpId }, FormMethod.Post, new { @class = "d-inline" }))
                    {
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    }

                </td>
            </tr>
        }
    </tbody>
</table>